<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nwsuaf.dao.TeacherDao">

    <resultMap id="teacherMap" type="nwsuaf.model.Teacher">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
    </resultMap>

    <insert id="teacherInsert" parameterType="nwsuaf.model.Teacher">
        INSERT INTO teacher (name,age,sex) VALUES (#{name}, #{age}, #{sex});
        <selectKey keyColumn="id" resultType="int" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <delete id="teacherDelete" parameterType="int">
        DELETE FROM teacher WHERE id = #{id};
    </delete>

    <update id="teacherUpdate" parameterType="nwsuaf.model.Teacher">
        UPDATE teacher
        SET name = #{name},
            age = #{age},
            sex = #{sex}
        WHERE id = #{id}
    </update>

    <select id="teacherFindById" parameterType="int" resultType="nwsuaf.model.Teacher">
        SELECT * FROM teacher WHERE id=#{id}
    </select>

    <select id="teacherFindByName" parameterType="String" resultType="nwsuaf.model.Teacher">
        SELECT * FROM teacher WHERE name=#{name}
    </select>

    <select id="teacherFindAll" resultType="nwsuaf.model.Teacher">
        SELECT * FROM teacher
    </select>
</mapper>